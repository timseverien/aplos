{
  "env": {
    "es2021": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "indent": ["error", "tab"],
    "no-tabs": "off"
  }
}
